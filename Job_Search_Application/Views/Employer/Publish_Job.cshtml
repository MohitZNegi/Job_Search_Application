@model Job_Search_Application.ViewModels.JobViewModel;
@{
    ViewData["Title"] = "Publish Job";
}

<head>
  <link rel="stylesheet" href="site.css">
</head>
<style>
    body {
        background: linear-gradient(to bottom, #1f4068, #4d4d4d);
    }

    /* Container style */
    .container-fluid {

        border-radius: 20px;
        padding: 20px;
    }

    /* Heading style */
    h1 {
        text-align: center;
        
    }

    /* Form style */
    form {
        margin-top: 20px;
    }

    /* Input field style */
    .form-control {
        margin-bottom: 10px;
    }

    /* Button style */
    .btn-publish {
        background-color: powderblue;
        color: black;
    }



</style>

<br />
<br />
<div class="container-fluid shadow" style="background-color:rgb(150, 165, 234); border-radius:20px;">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <div class="d-flex align-items-center justify-content-center">
            <svg xmlns="http://www.w3.org/2000/svg" width="42" height="42" fill="currentColor" class="bi bi-clipboard-heart" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M5 1.5A1.5 1.5 0 0 1 6.5 0h3A1.5 1.5 0 0 1 11 1.5v1A1.5 1.5 0 0 1 9.5 4h-3A1.5 1.5 0 0 1 5 2.5v-1Zm5 0a.5.5 0 0 0-.5-.5h-3a.5.5 0 0 0-.5.5v1a.5.5 0 0 0 .5.5h3a.5.5 0 0 0 .5-.5v-1Z" />
                <path d="M3 1.5h1v1H3a1 1 0 0 0-1 1V14a1 1 0 0 0 1 1h10a1 1 0 0 0 1-1V3.5a1 1 0 0 0-1-1h-1v-1h1a2 2 0 0 1 2 2V14a2 2 0 0 1-2 2H3a2 2 0 0 1-2-2V3.5a2 2 0 0 1 2-2Z" />
                <path d="M8 6.982C9.664 5.309 13.825 8.236 8 12 2.175 8.236 6.336 5.31 8 6.982Z" />
            </svg>
            <h1 style="text-align:center; color:aliceblue; margin-left: 10px;">Create a Job Listing</h1>
          </div>
            <hr/>
            <form asp-action="Publish_Job" method="post"></form>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col>
                        <div class="form-group">
                            <label asp-for="Title" class="control-label"></label>
                            <input asp-for="Title" class="form-control" />
                            <span asp-validation-for="Title" class="text-danger"></span>
                        </div>
                    </div>
                    <br />
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Job_Location" class="control-label"></label>
                            <input asp-for="Job_Location" class="form-control" />
                            <span asp-validation-for="Job_Location" class="text-danger"></span>
                        </div>
                    </div>
                <br />
                </div>
                <br />
                <div class="row">
                    <div class="col d-flex justify-content-center">
                        <div class="form-group mx-2 fade-in">
                            <svg xmlns="http://www.w3.org/2000/svg" width="40" height="40" fill="currentColor" class="bi bi-calendar-check" viewBox="0 0 16 16" margin-right: 17px;>
                                <path d="M10.854 7.146a.5.5 0 0 1 0 .708l-3 3a.5.5 0 0 1-.708 0l-1.5-1.5a.5.5 0 1 1 .708-.708L7.5 9.793l2.646-2.647a.5.5 0 0 1 .708 0z" />
                                <path d="M3.5 0a.5.5 0 0 1 .5.5V1h8V.5a.5.5 0 0 1 1 0V1h1a2 2 0 0 1 2 2v11a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V3a2 2 0 0 1 2-2h1V.5a.5.5 0 0 1 .5-.5zM1 4v10a1 1 0 0 0 1 1h12a1 1 0 0 0 1-1V4H1z" />
                            </svg>
                            <select required class="input" style="background-color: powderblue; border-radius:20px; font-size: 18px; padding: 12px;">
                                <option value="" disabled selected>Schedule</option>
                                <option value="Night shift">Night Shift</option>
                                <option value="Hours">1 - 4 hour(s)</option>
                                <option value="Hours">4 - 6 hours</option>
                                <option value="Hours">6- 8 hours</option>
                                <option value="Hours">8 - 12 hours</option>
                            </select>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                           
                        </div>

                        <div class="form-group mx-2 fade-in">
                            <svg xmlns="http://www.w3.org/2000/svg" width="38" height="38" fill="currentColor" class="bi bi-person-workspace" viewBox="0 0 16 16" margin-right: 17px;>
                                <path d="M4 16s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1H4Zm4-5.95a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5Z" />
                                <path d="M2 1a2 2 0 0 0-2 2v9.5A1.5 1.5 0 0 0 1.5 14h.653a5.373 5.373 0 0 1 1.066-2H1V3a1 1 0 0 1 1-1h12a1 1 0 0 1 1 1v9h-2.219c.554.654.89 1.373 1.066 2h.653a1.5 1.5 0 0 0 1.5-1.5V3a2 2 0 0 0-2-2H2Z" />
                            </svg>
                            <select required class="input" style="background-color: powderblue; border-radius:20px; font-size: 18px; padding: 12px;">
                                <option value="" disabled selected>Select Job Type</option>
                                <option value="full-time">Full-time</option>
                                <option value="part-time">Part-time</option>
                                <option value="contract">Contract</option>
                            </select>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            
                        </div>

                        <div class="group mx-2 fade-in">
                            <svg xmlns="http://www.w3.org/2000/svg" width="38" height="38" fill="currentColor" class="bi bi-currency-exchange" viewBox="0 0 16 16" margin-right: 17px;>
                                <path d="M0 5a5.002 5.002 0 0 0 4.027 4.905 6.46 6.46 0 0 1 .544-2.073C3.695 7.536 3.132 6.864 3 5.91h-.5v-.426h.466V5.05c0-.046 0-.093.004-.135H2.5v-.427h.511C3.236 3.24 4.213 2.5 5.681 2.5c.316 0 .59.031.819.085v.733a3.46 3.46 0 0 0-.815-.082c-.919 0-1.538.466-1.734 1.252h1.917v.427h-1.98c-.003.046-.003.097-.003.147v.422h1.983v.427H3.93c.118.602.468 1.03 1.005 1.229a6.5 6.5 0 0 1 4.97-3.113A5.002 5.002 0 0 0 0 5zm16 5.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0zm-7.75 1.322c.069.835.746 1.485 1.964 1.562V14h.54v-.62c1.259-.086 1.996-.74 1.996-1.69 0-.865-.563-1.31-1.57-1.54l-.426-.1V8.374c.54.06.884.347.966.745h.948c-.07-.804-.779-1.433-1.914-1.502V7h-.54v.629c-1.076.103-1.808.732-1.808 1.622 0 .787.544 1.288 1.45 1.493l.358.085v1.78c-.554-.08-.92-.376-1.003-.787H8.25zm1.96-1.895c-.532-.12-.82-.364-.82-.732 0-.41.311-.719.824-.809v1.54h-.005zm.622 1.044c.645.145.943.38.943.796 0 .474-.37.8-1.02.86v-1.674l.077.018z" />
                            </svg>
                            <select required class="input" style="background-color: powderblue; border-radius:20px; font-size: 18px; padding: 12px;">
                                <option value="" disabled selected>Select Salary Range</option>
                                <option value="10000 - 20000">$10,000 - $20,000</option>
                                <option value="30000 - 50000">$30,000 - $50,000</option>
                                <option value="60000 - 80000">$60,000 - $80,000</option>
                                <option value="90000 - 110000">$90,000 - $110,000</option>
                                <option value="120000 - 140000">$120,000 - $140,000</option>
                                <option value="150000+">$150,000+</option>
                            </select>
                            <span class="highlight"></span>
                            <span class="bar"></span>
                            
                        </div>
                     </div>
                  </div>
                <br />
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Classification" class="control-label"></label>
                            <input type="text" asp-for="Classification" class="form-control" />
                            <span asp-validation-for="Classification" class="text-danger"></span>
                        </div>

                    </div>
                </div>
                

                    <div class="col">
                        <div class="form-group">
                            <label asp-for="DeactivationDate" class="control-label"></label>
                            <input type="datetime-local" asp-for="DeactivationDate" class="form-control" />
                            <span asp-validation-for="DeactivationDate" class="text-danger"></span>
                        </div>

                    </div>
                


                <div class="col" >
                        <div class="form-group" >
                            <label  asp-for="Job_Details" class="control-label" ></label>
                        <textarea  class="form-control" id="editor" rows="8" asp-for="Job_Details"></textarea>
                        <span asp-validation-for="Job_Details" class="text-danger"></span>
                        </div>

                    </div>
            <br />
                <br />
                <div class="d-flex justify-content-center">
                    <div class="col-md-8">
                        <fieldset>
                            <button type="submit" value="Create" class="w-100 btn btn-lg btn-success shadow  " style="background-color:powderblue; color:black" id="save">Publish Job</button>
                            <button type="submit" formaction="@Url.Action("DraftJobs")" formmethod="post" class="w-100 btn btn-lg btn-secondary shadow" style="background-color:lightgray; color:black" id="draft">Save as Draft</button>
                        </fieldset>
                      
                    </div>
                </div>
                <br/>
            <br />

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}