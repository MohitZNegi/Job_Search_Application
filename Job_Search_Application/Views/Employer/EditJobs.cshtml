@model Job_Search_Application.ViewModels.JobViewModel

<h2>Edit Job</h2>

<form asp-action="EditJobs">
    <div class="form-group">
        <label asp-for="Title"></label>
        <input asp-for="Title" class="form-control" />
        <span asp-validation-for="Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job_Details"></label>
        <textarea asp-for="Job_Details" class="form-control"></textarea>
        <span asp-validation-for="Job_Details" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job_Location"></label>
        <input asp-for="Job_Location" class="form-control" />
        <span asp-validation-for="Job_Location" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Salary"></label>
        <input asp-for="Salary" class="form-control" />
        <span asp-validation-for="Salary" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job_Type"></label>
        <input asp-for="Job_Type" class="form-control" />
        <span asp-validation-for="Job_Type" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Job_Schedule"></label>
        <input asp-for="Job_Schedule" class="form-control" />
        <span asp-validation-for="Job_Schedule" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Classification"></label>
        <input asp-for="Classification" class="form-control" />
        <span asp-validation-for="Classification" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DeactivationDate"></label>
        <input asp-for="DeactivationDate" class="form-control" />
        <span asp-validation-for="DeactivationDate" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
