@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Personal Data";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h3>@ViewData["Title"]</h3>

<div class="row">
    <div class="col-md-6">
        <p>Your account contains personal data that you have given us. This page allows you to delete that data.</p>
        <p>
            <strong>Deleting this data will permanently remove your account, and this cannot be recovered.</strong>
        </p>
       
            <a id="delete" asp-page="DeletePersonalData" role="button" class="button-30"> <p class="align-content-center justify-content-between" style="font-size:30px; padding-top:10px">Delete Profile</p></a>
        <br/>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
