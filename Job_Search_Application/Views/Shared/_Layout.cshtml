<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] WorkWize</title>
    <link rel="icon" type="image/x-icon" href="~/resources/websitefiles/workwize__logo2.png">

    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/bootstrap.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Job_Search_Application.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">



</head>
@using Job_Search_Application.Data;
@using Job_Search_Application.Controllers;

@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUsers> SignInManager
@inject UserManager<ApplicationUsers> UserManager

<body style="background-color:white">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark sticky-top  shadow-lg" style="background-color:rgb(102, 153, 255); box-shadow: rgba(0, 0, 0, 0.19) 0px 10px 20px, rgba(0, 0, 0, 0.23) 0px 6px 6px;">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Job" asp-action="JobsFeed" >
                    <img src="~/resources/websitefiles/WorkWize_Logo4.png" style=" max-width:200px;" />

                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                    
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                      
                            <li class="nav-item">
                                <a class="nav-link text-light" asp-area="" asp-controller="Job" asp-action="JobsFeed">Jobs Feed</a>
                            </li>

                      

                    
                        
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>
    <footer class="site-footer" >
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <h6>About</h6>
                    <p class="text-justify">
                        Our website offers a comprehensive and extensive database of job listings. We have established partnerships with numerous companies and organizations, ensuring a wide range of job opportunities across various industries and sectors.
                        Whether you're looking for entry-level positions or executive roles, our website caters to diverse job seekers with different skill sets and experience levels.
                    </p>
                </div>



                <div class="col-xs-6 col-md-3">
                    <h6>About WorkWize</h6>
                    <ul class="footer-links">
                        <li><a asp-controller="Home" asp-action="ContactUs">Contact Us</a></li>
                        <li><a asp-controller="Home" asp-action="AboutUs">About Us</a></li>
                        <li><a asp-controller="Home" asp-action="Privacy">Terms and Condition</a></li>
                    </ul>
                </div>



                <div class="col-xs-6 col-md-3">
                    <h6>Join Us</h6>
                    <ul class="footer-links">
                        <li> <a asp-area="Identity" asp-page="/Account/Register">Register</a></li>
                        <li><a  asp-area="Identity" asp-page="/Account/Login">Login</a></li>
                    </ul>
                </div>
            </div>
            <hr>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-md-8 col-sm-6 col-xs-12">
                    <p class="copyright-text">
                        Copyright &copy; 2023 All Rights Reserved by
                        <a class="text-info" asp-area="" asp-controller="Home" asp-action="Index">WorkWize</a>
                    </p>
                </div>



                <div class="col-md-4 col-sm-6 col-xs-12">
              <a class="navbar-brand" asp-area="" asp-controller="Job" asp-action="JobsFeed" >
                    <img src="~/resources/websitefiles/WorkWize_Logo3.png" style=" max-width:200px;" />

                </a>
                </div>
            </div>
        </div>
    </footer>
  <!-- <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Job_Search_Application - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
      </footer>-->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
