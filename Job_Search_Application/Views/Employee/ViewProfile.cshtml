@model Employee_Model;
@{
    ViewData["Title"] = "Create";
}

<br />
<div class="container shadow-lg rounded-2" style="background-color:rgb(153, 187, 255)">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <br />
            <div class="shadow-lg rounded-2" style="background-color:rgb(102, 153, 255)">
                <h1 style="text-align: center; color: aliceblue">
                    <img src="~/resources/websitefiles/WorkWize__Logo2.png" style="max-width:50px;" /> Your profile
                </h1>
                <h5 style="text-align: center; color: aliceblue">Your journey starts here!</h5>
                <br />
            </div>
            <hr />
    
       
            <div class="row d-flex justify-content-center">
                <div class="col-4" style="border-radius:30px;">
                    <br />
                    <h3>@Html.DisplayNameFor(model => model.Personal_Summary):</h3>
                    <figure ">
                        <blockquote class="blockquote">
                            <p class="mb-0">@Html.DisplayFor(modelItem => modelItem.Personal_Summary)</p>

                        </blockquote>
                  
                   </figure>
                  
                    <br />
                </div>

                <div class="col-4 d-flex justify-content-between align-content-center " style="border-radius:30px; ">
                    <br />
                    <p> <br />   <br />   <img class="rounded-circle" style="max-height:200px; width:200px; margin-right:10px;" src="@Model.ProfileImage" alt="Profile Image"></p>
               
                    <br />
                </div>
                <div class="col-4" style="border-radius: 30px;">
                    <br />
                    <h3>Details:</h3>
                    <div class="row">
                        <div class="col">
                            <h5>Name:</h5>
                            <p>@Html.DisplayFor(modelItem => modelItem.First_name) @Html.DisplayFor(modelItem => modelItem.Last_name)</p>
                        </div>
                        <div class="col">
                            <h5>@Html.DisplayNameFor(model => model.birthDate):</h5>
                            <p>@Html.DisplayFor(modelItem => modelItem.birthDate)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h5>@Html.DisplayNameFor(model => model.Gender):</h5>
                            <p>@Html.DisplayFor(modelItem => modelItem.Gender)</p>
                        </div>
                        <div class="col">
                            <h5>@Html.DisplayNameFor(model => model.Address):</h5>
                            <p>@Html.DisplayFor(modelItem => modelItem.Address)</p>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col">
                            <h5>@Html.DisplayNameFor(model => model.Profession):</h5>
                            <p>@Html.DisplayFor(modelItem => modelItem.Profession)</p>
                        </div>
                        <div class="col">
                            <h5>@Html.DisplayNameFor(model => model.Resume):</h5>
                            <a href="@Model.Resume" data-lightbox="@Model.Resume" data-title="My caption" style="color: aliceblue">Preview CV</a>
                        </div>
                    </div>
                    <br />
                </div>

         
            <br />
        </div>
            <div class="d-flex justify-content-center">
                <div class="col-md-5">
                    <fieldset>
                        <a asp-controller="Employee" asp-action="Update" class="w-100 btn btn-lg btn-success shadow" style="background-color:#3C9AFF; color:white" id="save">Edit Profile</a>
                    </fieldset>
                </div>
            </div>
            <br />
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
