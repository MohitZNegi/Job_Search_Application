@model Job_Search_Application.Models.Employee_Model;
@{
    ViewData["Title"] = "Create";
}

<br />
<div class="container shadow-lg rounded-2" style="background-color:rgb(153, 187, 255)">
    <div class="row d-flex justify-content-center">
        <div class="col-md-10">
            <br />
            <div class="shadow-lg rounded-2" style="background-color:rgb(102, 153, 255)">


                <h1 style="text-align: center; color: aliceblue">  <img src="~/resources/websitefiles/WorkWize__Logo2.png" style=" max-width:50px;" />  Update your profile</h1>
                <h5 style="text-align: center; color: aliceblue">Spruce up yourself to look more wize!!</h5>
                <br />
            </div>
            <hr />
            <form asp-action="Update" method="post" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row d-flex justify-content-center">
                    <div class="col-3">
                        <div class="form-group">
                            <img id="photoPreview" src="@Model.ProfileImage" alt=" " class="rounded-circle d-flex justify-content-center" style="width: 200px; height: 200px; text-align: center; max-height: 200px; max-width: 200px; margin-right: 10px;">
                            <label asp-for="ProfileImage">Profile Image</label>
                            <input asp-for="ProfileImage" type="file" class="form-control shadow" onchange="previewImage(event)" placeholder="Insert Image" accept=".png, .jpg, .jpeg">
                            <span asp-validation-for="ProfileImage" class="text-danger"></span>
                            <input type="hidden" asp-for="ProfileImage" value="@Model.ProfileImage" />
                        </div>
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col">
                        <div class="form-group">

                            <label asp-for="First_name" class="control-label">First Name:</label>

                            <input asp-for="First_name" class="form-control shadow" />
                            <span asp-validation-for="First_name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Last_name" class="control-label">Last Name:</label>
                            <input asp-for="Last_name" class="form-control shadow" />
                            <span asp-validation-for="Last_name" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="birthDate" class="control-label">Date of Birth:</label>
                            <input type="date" asp-for="birthDate" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" max="@DateTime.Now.ToString("yyyy-MM-dd")" />
                            <span asp-validation-for="birthDate" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Address" class="control-label">Address:</label>
                            <input asp-for="Address" class="form-control" />
                            <span asp-validation-for="Address" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <label asp-for="Profession" class="control-label">Profession:</label>
                            <input asp-for="Profession" class="form-control" />
                            <span asp-validation-for="Profession" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col">
                        <fieldset class="form-group">
                            <label>Gender:</label>
                            <br />
                            <div class="btn-group" role="group" aria-label="Basic radio toggle button group">
                                <input asp-for="Gender" type="radio" name="Gender" id="GenderMale" value="Male" class="btn-check" autocomplete="off" checked="@(Model.Gender == "Male")">
                                <label class="btn btn-outline-primary" asp-for="Gender" for="GenderMale">Male</label>

                                <input asp-for="Gender" type="radio" name="Gender" id="GenderFemale" value="Female" class="btn-check" autocomplete="off" checked="@(Model.Gender == "Female")">
                                <label class="btn btn-outline-primary" asp-for="Gender" for="GenderFemale">Female</label>

                                <input asp-for="Gender" type="radio" name="Gender" id="GenderOther" value="Other" class="btn-check" autocomplete="off" checked="@(Model.Gender == "Other")">
                                <label class="btn btn-outline-primary" asp-for="Gender" for="GenderOther">Other</label>
                            </div>
                            <span asp-validation-for="Gender" class="text-danger"></span>
                        </fieldset>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Personal_Summary" class="control-label">Personal Summary:</label>
                    <textarea asp-for="Personal_Summary" class="form-control" id="exampleTextarea" rows="2" spellcheck="false"></textarea>
                    <span asp-validation-for="Personal_Summary" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Resume">Resume:</label>
                    <input type="file" id="formFile" asp-for="Resume" class="form-control" accept=".pdf" required value="@Model.Resume"/>
                    <span asp-validation-for="Resume" class="text-danger"></span>
                    <span class="text-danger" data-valmsg-for="Resume" data-valmsg-replace="true"></span>
                </div>
                <br />
                <div class="d-flex justify-content-center">
                    <div class="col-md-8 d-flex justify-content-center">
                        <fieldset>
                            <button type="submit" value="Update" role="button" class="button-29" id="save">  <p class="align-content-center justify-content-between" style="font-size:30px; padding-top:10px">Update Profile</p></button>
                        </fieldset>
                    </div>
                </div>
                <br />
            </form>
            <br />
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

<script>
    function previewImage(event) {
        var fileInput = event.target;
        var photoPreview = document.getElementById('photoPreview');

        if (fileInput.files && fileInput.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
                photoPreview.src = e.target.result;
                photoPreview.style.display = 'block';
            };

            reader.readAsDataURL(fileInput.files[0]);
        } else {
            photoPreview.src = '';
            photoPreview.style.display = 'none';
        }
    }
</script>
